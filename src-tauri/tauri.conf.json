{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pdf2dxf",
  "version": "0.1.0",
  "identifier": "com.pdf2dxf.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "pdf2dxf",
        "width": 1000,
        "height": 850,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}